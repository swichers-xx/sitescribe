{
  "manifest_version": 3,
  "name": "SiteScribe",
  "description": "Extension Overview: \"SiteScribe\"\nPurpose:\nSiteScribe is a lightweight browser extension that runs seamlessly in the background, capturing snapshots of every site visited in multiple formats. With robust customization options and theming, it adapts to the needs of any user, offering a unified way to archive, revisit, and interact with web content.",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "tabs", 
    "activeTab",
    "notifications",
    "webRequest",
    "cookies",
    "downloads",
    "history",
    "bookmarks",
    "proxy",
    "scripting",
    "pageCapture",
    "downloads.shelf"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "webData/*",
      "lib/Readability.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "author": "Sean Wichers",
  "homepage_url": "https://www.luceresearch.com",
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "devtools_page": "devtools.html",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Opens the extension popup"
    }
  }
}